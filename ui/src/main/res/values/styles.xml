<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.NoActionBar">

        <item name="colorPrimary">@color/theme_color_primary</item>
        <item name="colorPrimaryVariant">@color/theme_color_secondary</item>
        <item name="colorOnPrimary">@android:color/black</item>

        <item name="colorSecondary">@color/theme_color_primary</item>
        <item name="colorSecondaryVariant">@color/theme_color_secondary</item>
        <item name="colorOnSecondary">@android:color/black</item>
        
        <item name="colorSurface">@color/theme_background_2</item>
        <item name="colorOnSurface">@color/theme_text_primary</item>

        <item name="android:colorBackground">@color/theme_background_2</item>
        <item name="colorOnBackground">@color/theme_text_primary</item>

        <item name="colorError">@color/red_1</item>
        <item name="colorOnError">@android:color/black</item>-->

        <!-- Font -->
        <item name="android:fontFamily">@font/noto_sans</item>

        <!-- Text field -->
        <item name="textInputStyle">@style/Widget.AppTheme.TextInputLayout</item>

        <!-- Toolbar -->
        <item name="toolbarStyle">@style/Widget.AppTheme.Toolbar</item>

        <!-- BottomNavigation -->
        <item name="bottomNavigationStyle">@style/Widget.AppTheme.BottomNavigationView</item>

        <!-- status / navigation -->
        <item name="android:statusBarColor" tools:ignore="NewApi">@color/theme_background_1</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
        <item name="android:windowLightNavigationBar" tools:ignore="NewApi">false</item>
        <item name="android:navigationBarColor" tools:ignore="NewApi">@color/theme_background_1</item>

        <!-- transition -->
        <item name="android:windowActivityTransitions">true</item>
    </style>

    <!-- Text field -->
    <style name="Widget.AppTheme.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox" />

    <!-- Toolbar -->
    <style name="Widget.AppTheme.Toolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:background">@color/theme_background_1</item>
    </style>

    <!-- BottomNavigation -->
    <style name="Widget.AppTheme.BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="android:background">@color/theme_background_1</item>
        <item name="itemIconTint">@color/bottomsheet_icon</item>
        <item name="itemTextAppearanceInactive">@style/Widget.AppTheme.BottomNavigationView.TextAppearanceInactive</item>
        <item name="itemTextAppearanceActive">@style/Widget.AppTheme.BottomNavigationView.TextAppearanceActive</item>
    </style>

    <style name="Widget.AppTheme.BottomNavigationView.TextAppearanceInactive">
        <item name="android:color">@color/theme_color_secondary</item>
    </style>

    <style name="Widget.AppTheme.BottomNavigationView.TextAppearanceActive">
        <item name="android:color">@color/theme_color_primary</item>
    </style>

    <!-- Items -->
    <style name="StickyNote" />

    <style name="StickyNote.Title">
        <item name="android:textSize">@dimen/stickynote_title_textSize</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/theme_text_primary</item>
    </style>

    <style name="StickyNote.Description">
        <item name="android:textSize">@dimen/stickynote_subtitle_textSize</item>
        <item name="android:textColor">@color/theme_text_secondary</item>
    </style>

    <style name="Cell" />

    <style name="Cell.Checkable" />

    <style name="Cell.Checkable.Title">
        <item name="android:textSize">@dimen/cell_checkable_title_textSize</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

</resources>
